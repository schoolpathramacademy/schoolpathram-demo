<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/news_lbl_cat1"
            android:background="@drawable/category_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@android:color/background_light"
            android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/news_lbl_cat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_lbl_cat1"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:background="@drawable/category_badge"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/news_lbl_cat2"
            android:textSize="16dp"
            android:textStyle="bold" />



    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/news_title"
        android:src="@drawable/loutube_logo_round"></ImageButton>

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/imageButton" />

<!--    <TextView-->
<!--        android:id="@+id/multipleImageBadgeDetail"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/image_preview"-->
<!--        android:layout_marginTop="-63dp"-->
<!--        android:layout_marginLeft="250dp"-->
<!--        android:background="@drawable/category_badge"-->
<!--        android:textAppearance="?attr/textAppearanceListItem"-->
<!--        android:textColor="@android:color/background_light" />-->

    <TextView
        android:id="@+id/news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_preview"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:textColor="@android:color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postScroll"
            android:layout_below="@id/news_date">
            <TextView
                android:id="@+id/postDescription"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black" />
        </ScrollView>



    </RelativeLayout>
